<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:id="@+id/userProfileActivity"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  tools:context=".activities.UserProfileActivity">

  <TextView
    android:id="@+id/userProfileActivityNicknameTitle"
    android:layout_width="wrap_content"
    android:layout_height="60dp"
    android:layout_marginStart="40dp"
    android:layout_marginTop="64dp"
    android:gravity="center"
    android:text="@string/nickname_title"
    android:textSize="24sp"
    app:layout_constraintEnd_toStartOf="@+id/userProfileActivityNicknameInputEditText"
    app:layout_constraintHorizontal_bias="0.5"
    app:layout_constraintHorizontal_chainStyle="packed"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent" />

  <EditText
    android:id="@+id/userProfileActivityNicknameInputEditText"
    android:layout_width="0dp"
    android:layout_height="60dp"
    android:layout_marginEnd="40dp"
    android:ems="10"
    android:gravity="center_vertical"
    android:hint="@string/user_profile_nickname_input_hint"
    android:inputType="textPersonName"
    android:textSize="24sp"
    app:layout_constraintBottom_toBottomOf="@+id/userProfileActivityNicknameTitle"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="0.5"
    app:layout_constraintStart_toEndOf="@+id/userProfileActivityNicknameTitle"
    app:layout_constraintTop_toTopOf="@+id/userProfileActivityNicknameTitle" />

  <Button
    android:id="@+id/userProfileActivitySaveButton"
    android:layout_width="120dp"
    android:layout_height="60dp"
    android:layout_marginTop="40dp"
    android:text="@string/save"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="0.5"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/userProfileActivityNicknameTitle" />
</androidx.constraintlayout.widget.ConstraintLayout>
