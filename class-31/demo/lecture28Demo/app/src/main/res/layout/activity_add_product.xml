<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.AddProductActivity">

  <EditText
    android:id="@+id/AddProductETName"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="101dp"
    android:layout_marginTop="58dp"
    android:ems="10"
    android:inputType="textPersonName"
    android:text="Name"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent" />

  <EditText
    android:id="@+id/AddProductETPrice"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="97dp"
    android:layout_marginTop="70dp"
    android:ems="10"
    android:hint="Price"
    android:inputType="numberDecimal"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/AddProductETName" />

  <Spinner
    android:id="@+id/AddProductEnumTypeSpinner"
    android:layout_width="409dp"
    android:layout_height="wrap_content"
    android:layout_marginStart="1dp"
    android:layout_marginBottom="116dp"
    app:layout_constraintBottom_toTopOf="@+id/AddProductSaveBttn"
    app:layout_constraintStart_toStartOf="parent" />

  <Button
    android:id="@+id/AddProductSaveBttn"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="128dp"
    android:layout_marginBottom="68dp"
    android:text="Save Product"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>
